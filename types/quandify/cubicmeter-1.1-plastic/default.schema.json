{
  "$id": "https://akenza.io/quandify/cubicmeter-1.1/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "default",
  "title": "Default",
  "properties": {
    "totalVolume": {
      "description": "Total volume (L)",
      "type": "number",
      "minimum": 0
    },
    "leakIsOngoing": {
      "description": "Is there an ongoing leak?",
      "type": "boolean"
    },
    "leakState": {
      "description": "Current leak state",
      "enum": [
        0,
        2,
        3,
        4
      ]
    },
    "leakStatus": {
      "description": "Current leak status",
      "enum": [
        "",
        "medium",
        "large"
      ]
    },
    "waterTemperatureMin": {
      "description": "Minimum temperature, within the set report interval, in degrees Celcius",
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/environment/schema.json#/$defs/temperature/celsius"
    },
    "waterTemperatureMax": {
      "description": "Maximum temperature, within the set report interval, in degrees Celcius",
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/environment/schema.json#/$defs/temperature/celsius"
    },
    "ambientTemperature": {
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/environment/schema.json#/$defs/temperature/celsius"
    }
  },
  "required": [
    "totalVolume",
    "leakIsOngoing",
    "leakState",
    "leakStatus",
    "waterTemperatureMin",
    "waterTemperatureMax",
    "ambientTemperature"
  ]
}